<Window x:Class="HttpHeadersViewer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpHeadersViewer.View"
        mc:Ignorable="d"
        Icon="/Resource/Window_Icon.ico"
        Title="HTTPHeadersViewer" 
        Height="400" 
        Width="700"
        Background="{StaticResource WindowBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Padding="5"
                Background="#333333"
                BorderBrush="#666666"
                BorderThickness="0, 0, 0, 1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        ToolTip="Quit programm" 
                        Margin="0, 0, 5, 0"
                        x:Name="ButtonQuit" 
                        Click="ButtonQuit_Click">
                    <Image Source="/Resource/Icons/Quit.ico"/>
                </Button>
                <Button Grid.Column="1"
                        ToolTip="Export"
                        Margin="0, 0, 5, 0" 
                        IsEnabled="False">
                    <Image Source="/Resource/Icons/Export.ico"/>
                </Button>
                <Button Grid.Column="2"
                        ToolTip="Delete request" 
                        Margin="0, 0, 5, 0" 
                        IsEnabled="False"
                        x:Name="ButtonDelete" Click="ButtonDelete_Click">
                    <Image Source="/Resource/Icons/Delete.ico"/>
                </Button>
                <Button Grid.Column="3"
                        ToolTip="Add request" 
                        Margin="0, 0, 5, 0"
                        x:Name="ButtonAdd"
                        Click="ButtonAdd_Click">
                    <Image Source="/Resource/Icons/Add.ico"/>
                </Button>
                <TextBox Grid.Column="4"
                         Margin="0, 0, 10, 0"
                         BorderBrush="#666666" 
                         BorderThickness="1, 1, 1, 1"
                         VerticalAlignment="Center"
                         IsEnabled="False"
                         x:Name="TextBoxRequest"></TextBox>
                <Button Grid.Column="5"
                        ToolTip="Get response"
                        Height="30" 
                        VerticalAlignment="Top"
                        IsEnabled="False"
                        x:Name="ButtonResponse" Click="ButtonResponse_Click" >
                    <Image Source="/Resource/Icons/Get.ico"/>
                </Button>
            </Grid>    
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"
                  Margin="10, 10, 5, 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Margin="0, 0, 0, 5"
                           Style="{StaticResource Header}"
                           x:Name="TextBlockRequests">Requests 0</TextBlock>
                <ListBox Grid.Row="1"
                         Margin="0, 0, 0, 10"
                         x:Name="ListBoxRequests" 
                         SelectionChanged="ListBoxRequests_SelectionChanged"></ListBox>
                <TextBlock Grid.Row="2"
                           Margin="0, 0, 0, 5"
                           Style="{StaticResource Header}">Console</TextBlock>
                <TextBox Grid.Row="3"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         x:Name="TextBoxConsole"></TextBox>
            </Grid>
            <Grid Grid.Column="1"
                  Margin="5, 10, 10, 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>    
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Margin="0, 0, 0, 5"
                           Style="{StaticResource Header}"
                           x:Name="TextBlockHeaders">Headers 0</TextBlock>
                <ComboBox Grid.Row="1"
                          Margin="0, 0, 0, 10"
                          x:Name="ComboBoxHeaders" SelectionChanged="ComboBoxHeaders_SelectionChanged"></ComboBox>
                <TextBlock Grid.Row="2"
                           Margin="0, 0, 0, 5"
                           Style="{StaticResource Header}">Header</TextBlock>
                <TextBox Grid.Row="3"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         x:Name="TextBoxHeader"></TextBox>
            </Grid>
        </Grid>
        <Border Grid.Row="2"
                Padding="5"
                Background="#333333"
                BorderBrush="#666666"
                BorderThickness="0, 1, 0, 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Margin="0, 0, 5, 0"
                           Style="{StaticResource Header}">Status:</TextBlock>
                <TextBlock Grid.Column="1"
                           Style="{StaticResource Header}"
                           x:Name="TextBlockStatus"></TextBlock>
            </Grid>    
        </Border>
    </Grid>
</Window>
