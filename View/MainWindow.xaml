<Window x:Class="HttpHeadersViewer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpHeadersViewer.View"
        mc:Ignorable="d"
        Icon="/Resource/Window_Icon.ico"
        Title="HTTPHeadersViewer" 
        Height="400" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <StackPanel Background="#444444">
        <Border Padding="5"
                Background="#333333"
                Height="40"
                BorderBrush="#666666"
                BorderThickness="0, 0, 0, 1">
            <StackPanel Orientation="Horizontal">
                <Button ToolTip="Quit programm" 
                        Width="30" Padding="5" 
                        Margin="0, 0, 5, 0" 
                        Click="Button_Quit" 
                        x:Name="ButtonQuit">
                    <Image Source="/Resource/Icons/Quit.ico"></Image>
                </Button>
                <Button ToolTip="Export"
                        Width="30"
                        Padding="5" 
                        Margin="0, 0, 5, 0" 
                        IsEnabled="False" x:Name="ButtonExport">
                    <Image Source="/Resource/Icons/Export.ico"></Image>
                </Button>
                <Button ToolTip="Delete request" 
                        Width="30" Padding="5" 
                        Margin="0, 0, 5, 0" 
                        IsEnabled="False"
                        Click="Button_DeleteRequest"
                        x:Name="ButtonDeleteRequest">
                    <Image Source="/Resource/Icons/Delete.ico"></Image>
                </Button>
                <Button ToolTip="Create request" 
                        Width="30" Padding="5" 
                        Click="Button_CreateRequest" 
                        x:Name="ButtonCreateRequest">
                    <Image Source="/Resource/Icons/Add.ico"></Image>
                </Button>
                <TextBox Width="499" 
                         Margin="5, 0, 5, 0" 
                         BorderBrush="#666666" 
                         BorderThickness="1, 1, 1, 1" 
                         VerticalAlignment="Center"
                         IsEnabled="False"
                         x:Name="TextBoxRequestUri"></TextBox>
                <Button ToolTip="Get response" 
                        Width="30" 
                        Padding="5" 
                        IsEnabled="False"
                        Click="Button_GetResponse"
                        x:Name="ButtonGetResponse">
                    <Image Source="/Resource/Icons/Get.ico" x:Name="ImageGetResponse"></Image>
                </Button>
            </StackPanel>
        </Border>
        <Border Height="auto" Padding="10">
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="310" Margin="0, 0, 10, 0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="#EFEFEF" Margin="0, 0, 3, 5">Headers</TextBlock>
                        <TextBlock Foreground="#EFEFEF" Margin="0, 0, 3, 5" x:Name="TextBlockHeadersCount">0/0</TextBlock>
                    </StackPanel>
                    <ComboBox  Margin="0, 0, 0, 5" 
                               x:Name="ComboBoxHeaders" 
                               SelectionChanged="ComboBoxHeaders_SelectionChanged"></ComboBox>
                    <TextBlock Foreground="#EFEFEF" Margin="0, 5, 0, 5">Console</TextBlock>
                    <TextBox Height="232" x:Name="TextBoxConsole"></TextBox>
                </StackPanel>
                <StackPanel Width="344">
                    <TextBlock Foreground="#EFEFEF" Margin="0, 0, 0, 5">Header value</TextBlock>
                    <TextBox Height="280" x:Name="TextBoxHeaderValue"></TextBox>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
